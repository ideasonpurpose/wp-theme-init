{
  "name": "wp-theme-init",
  "version": "2.2.0",
  "private": true,
  "description": "A common baseline of repeated functions, filters and actions used across our WordPress themes.",
  "keywords": [
    "Ideas On Purpose",
    "init",
    "wordpress"
  ],
  "homepage": "https://github.com/ideasonpurpose/wp-theme-init#readme",
  "bugs": {
    "url": "https://github.com/ideasonpurpose/wp-theme-init/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ideasonpurpose/wp-theme-init.git"
  },
  "license": "MIT",
  "author": "Joe Maller <joe@joemaller.com> (http://www.joemaller.com)",
  "scripts": {
    "prettier": "cd $INIT_CWD && prettier --write",
    "prettier-php": "cd $INIT_CWD && prettier --write --print-width 120",
    "version": "version-everything && auto-changelog && git add -u"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.php",
        "options": {
          "phpVersion": "7.2",
          "printWidth": 120,
          "singleQuote": true,
          "tabWidth": 4,
          "trailingCommaPHP": true
        }
      }
    ]
  },
  "devDependencies": {
    "@prettier/plugin-php": "^0.14.0",
    "auto-changelog": "^2.0.0",
    "prettier": "^2.0.5",
    "version-everything": "^0.6.3"
  },
  "auto-changelog": {
    "package": true
  },
  "version-everything": {
    "files": [
      "README.md"
    ]
  }
}
